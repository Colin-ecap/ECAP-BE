{
  "openapi": "3.0.0",
  "info": {
    "title": "Registration API",
    "description": "API documentation for authentication and user registration",
    "version": "1.0",
    "contact": {
      "email": "admin@example.com"
    }
  },
  "servers": [
    {
      "url": "/api",
      "description": "API Server"
    }
  ],
  "tags": [
    {
      "name": "Authentication",
      "description": "Authentication and registration endpoints"
    },
    {
      "name": "Users",
      "description": "User management endpoints"
    }
  ],
  "paths": {
    "/auth/sign-up": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Register a new user",
        "description": "Creates a new user account with the provided information",
        "operationId": "signUp",
        "requestBody": {
          "description": "User registration information",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUserDTO"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User successfully created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthUser"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - validation failed or email already exists"
          }
        }
      }
    },
    "/auth/sign-in": {
      "post": {
        "tags": ["Authentication"],
        "summary": "User login",
        "description": "Authenticate user with email and password",
        "operationId": "signIn",
        "requestBody": {
          "description": "User credentials",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SignInDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User successfully authenticated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponseDTO"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - invalid credentials"
          }
        }
      }
    },
    "/auth/refresh-token": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Refresh authentication token",
        "description": "Get a new access token using refresh token",
        "operationId": "refreshToken",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Tokens successfully refreshed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthTokensDTO"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - invalid refresh token"
          }
        }
      }
    },
    "/auth/forgot-password": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Request password reset",
        "description": "Send a password reset link to user email",
        "operationId": "sendForgotPasswordLink",
        "requestBody": {
          "description": "User email",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EmailDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password reset link sent successfully"
          }
        }
      }
    },
    "/auth/reset-password": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Reset password",
        "description": "Reset authenticated user's password",
        "operationId": "resetPassword",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "New password information",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ResetPasswordDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password successfully reset"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/auth/change-forgotten-password": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Change forgotten password",
        "description": "Change password using a forgot password token",
        "operationId": "changeForgottenPassword",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "New password",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PasswordDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password successfully changed"
          },
          "401": {
            "description": "Unauthorized - invalid token"
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Logout",
        "description": "Log out a user and invalidate their tokens",
        "operationId": "logOut",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully logged out"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/auth/change-email": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Change email",
        "description": "Change authenticated user's email address",
        "operationId": "confirmNewEmail",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "New email information with password confirmation",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ChangeEmailPasswordDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Email change process initiated"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/auth/email/confirm-email": {
      "get": {
        "tags": ["Authentication"],
        "summary": "Confirm email",
        "description": "Confirm a user's email address using a token",
        "operationId": "confirmEmail",
        "parameters": [
          {
            "name": "token",
            "in": "query",
            "description": "Email confirmation token",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Email successfully confirmed"
          },
          "400": {
            "description": "Invalid token"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateUserDTO": {
        "type": "object",
        "required": ["email", "password", "firstname", "lastname"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "description": "User email address",
            "example": "user@example.com"
          },
          "password": {
            "type": "string",
            "description": "User password",
            "example": "StrongP@ssw0rd"
          },
          "firstname": {
            "type": "string",
            "description": "User's first name",
            "example": "John"
          },
          "lastname": {
            "type": "string",
            "description": "User's last name",
            "example": "Doe"
          }
        }
      },
      "SignInDTO": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "description": "User email address",
            "example": "user@example.com"
          },
          "password": {
            "type": "string",
            "description": "User password",
            "example": "StrongP@ssw0rd"
          }
        }
      },
      "AuthUser": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "User ID"
          },
          "firstname": {
            "type": "string",
            "description": "User's first name"
          },
          "lastname": {
            "type": "string",
            "description": "User's last name"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "User email address"
          },
          "isActive": {
            "type": "boolean",
            "description": "User account status"
          },
          "emailVerified": {
            "type": "boolean",
            "description": "Email verification status"
          },
          "roles": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "User roles"
          }
        }
      },
      "LoginResponseDTO": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string",
            "description": "JWT access token"
          },
          "refreshToken": {
            "type": "string",
            "description": "JWT refresh token"
          }
        }
      },
      "AuthTokensDTO": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string"
          },
          "refreshToken": {
            "type": "string"
          }
        }
      },
      "EmailDTO": {
        "type": "object",
        "required": ["email"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "description": "User email address",
            "example": "user@example.com"
          }
        }
      },
      "PasswordDTO": {
        "type": "object",
        "required": ["password"],
        "properties": {
          "password": {
            "type": "string",
            "description": "New password",
            "example": "NewStrongP@ssw0rd"
          }
        }
      },
      "ResetPasswordDTO": {
        "type": "object",
        "required": ["password", "passwordConfirmation"],
        "properties": {
          "password": {
            "type": "string",
            "description": "New password",
            "example": "NewStrongP@ssw0rd"
          },
          "passwordConfirmation": {
            "type": "string",
            "description": "Confirm new password",
            "example": "NewStrongP@ssw0rd"
          }
        }
      },
      "ChangeEmailPasswordDTO": {
        "type": "object",
        "required": ["newEmail", "password"],
        "properties": {
          "newEmail": {
            "type": "string",
            "format": "email",
            "description": "New email address",
            "example": "newemail@example.com"
          },
          "password": {
            "type": "string",
            "description": "Current password for verification",
            "example": "StrongP@ssw0rd"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
} 